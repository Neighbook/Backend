		"node-geocoder": "^4.2.0",
		"pg": "^8.8.0",
		"pg-hstore": "^2.3.4",
		"reflect-metadata": "^0.1.13",
		"sqlite3": "^5.1.4",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^4.6.0",
		"tslog": "^4.7.2",
		"typeorm": "^0.3.12",
		"uuid": "^9.0.0",
		"yarn": "^1.22.19"

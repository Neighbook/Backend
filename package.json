		"concurrently": "^7.6.0",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"http-errors": "^2.0.0",
		"jsonwebtoken": "^9.0.0",
		"mariadb": "^3.0.2",
		"mime-types": "^2.1.35",
		"minio": "^7.1.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
